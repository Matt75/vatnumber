{
    "name": "prestashop/vatnumber",
    "description": "PrestaShop module vatnumber",
    "homepage": "https://github.com/PrestaShop/vatnumber",
    "license": "AFL-3.0",
    "type": "prestashop-module",
    "authors": [
        {
            "name": "PrestaShop SA",
            "email": "contact@prestashop.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1.0"
        },
        "preferred-install": "dist",
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "sort-packages": true,
        "prepend-autoloader": false
    },
    "require": {
        "dragonbe/vies": "~2.0"
    },
    "require-dev": {
        "prestashop/php-dev-tools": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "PrestaShop\\Module\\VatNumber\\": "src/"
        },
        "classmap": [
            "controllers",
            "vatnumber.php"
        ]
    },
    "scripts": {
        "set-license-header": [
            "@php ./vendor/bin/header-stamp --license=\"assets/afl.txt\" --exclude=\".github,vendor\""
        ]
    }
}
